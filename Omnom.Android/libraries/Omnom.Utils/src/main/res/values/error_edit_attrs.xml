<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ErrorEdit">
        <attr name="showClear" format="boolean"/>
        <attr name="iconClear" format="reference"/>
        <attr name="textSize" format="reference|dimension"/>
        <attr name="errorTextSize" format="reference|dimension"/>
        <attr name="textGravity">
            <flag name="left" value="0x00000000"/>
            <flag name="center" value="0x00000001"/>
            <flag name="right" value="0x00000002"/>
        </attr>
        <attr name="inputType">
            <flag name="text" value="0x00000000"/>
            <flag name="phone" value="0x00000001"/>
            <flag name="email" value="0x00000002"/>
            <flag name="name" value="0x00000003"/>
            <flag name="numberDecimal" value="0x00000004"/>
        </attr>
        <attr name="font">
            <flag name="regular" value="0x00000000"/>
            <flag name="medium" value="0x00000001"/>
            <flag name="regular_le" value="0x00000002"/>
        </attr>
        <attr name="hint" format="reference|string"/>
    </declare-styleable>
</resources>