<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ErrorEdit">
        <attr name="showClear" format="boolean"/>
        <attr name="iconClear" format="reference"/>
        <attr name="textSize" format="reference|dimension"/>
        <attr name="errorTextSize" format="reference|dimension"/>
        <attr name="maxLength" format="reference|integer"/>
        <attr name="textGravity">
            <flag name="left" value="0x00000000"/>
            <flag name="center" value="0x00000001"/>
            <flag name="right" value="0x00000002"/>
        </attr>
        <attr name="inputType">
            <flag name="text" value="0x00000000"/>
            <flag name="phone" value="0x00000001"/>
            <flag name="email" value="0x00000002"/>
            <flag name="name" value="0x00000003"/>
            <flag name="numberDecimal" value="0x00000004"/>
        </attr>
        <attr name="font">
            <flag name="regular" value="0x00000000"/>
            <flag name="medium" value="0x00000001"/>
            <flag name="regular_le" value="0x00000002"/>
        </attr>
        <attr name="hint" format="reference|string"/>

    <attr name="imeOptions">
        <flag name="normal" value="0x00000000" />
        <flag name="actionUnspecified" value="0x00000000" />
        <flag name="actionNone" value="0x00000001" />
        <flag name="actionGo" value="0x00000002" />
        <flag name="actionSearch" value="0x00000003" />
        <flag name="actionSend" value="0x00000004" />
        <flag name="actionNext" value="0x00000005" />
        <flag name="actionDone" value="0x00000006" />
        <flag name="actionPrevious" value="0x00000007" />
        <flag name="flagNoFullscreen" value="0x2000000" />
        <flag name="flagNavigatePrevious" value="0x4000000" />
        <flag name="flagNavigateNext" value="0x8000000" />
        <flag name="flagNoExtractUi" value="0x10000000" />
        <flag name="flagNoAccessoryAction" value="0x20000000" />
        <flag name="flagNoEnterAction" value="0x40000000" />
        <flag name="flagForceAscii" value="0x80000000" />
    </attr>


    </declare-styleable>
</resources>