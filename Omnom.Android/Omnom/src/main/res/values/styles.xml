<resources>

    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textColorPrimary">@color/text_color_black</item>

        <item name="android:textAppearance">@style/TextAppearance</item>
        <item name="android:textAppearanceSmall">@style/TextAppearance.Small</item>
        <item name="android:textAppearanceLarge">@style/TextAppearance.Large</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.Medium</item>

        <item name="android:listPreferredItemHeight">46dp</item>

        <item name="android:textAppearanceInverse">@style/TextAppearance.Inverse</item>
        <item name="android:textAppearanceSmallInverse">@style/TextAppearance.Small.Inverse</item>
        <item name="android:textAppearanceLargeInverse">@style/TextAppearance.Large.Inverse</item>
        <item name="android:textAppearanceMediumInverse">@style/TextAppearance.Medium.Inverse</item>

        <item name="android:textViewStyle">@style/TextView</item>
        <item name="android:buttonStyle">@style/Button</item>
        <item name="android:editTextStyle">@style/EditText</item>
        <item name="android:autoCompleteTextViewStyle">@style/EditText</item>
        <item name="numberPickerStyle">@style/NPWidget.Holo.Light.NumberPicker</item>
    </style>

    <style name="AppTheme.Light">
        <item name="android:editTextStyle">@style/EditText.White</item>
    </style>

    <style name="Theme.Wood" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_wood</item>
    </style>

    <style name="Theme.Wood.Light" parent="AppTheme.Light">
        <item name="android:windowBackground">@drawable/bg_wood</item>
    </style>


    <style name="Theme.Wood.Red" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_wood_red</item>
    </style>

    <style name="Theme.Wood.Red.Light">
        <item name="android:editTextStyle">@style/EditText.White</item>
    </style>

    <style name="Theme.White" parent="AppTheme">
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="Theme.ConfirmPhone" parent="Theme.White">
        <item name="android:editTextStyle">@style/EditText.Small</item>
    </style>

    <style name="Theme.Transparent" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.Transparent.Light">
        <item name="android:editTextStyle">@style/EditText.White</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.White.Light" parent="AppTheme.Light">
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="Theme.Simple" parent="android:Theme.Holo.Light">
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="DatePicker">
        <item name="fontPath">fonts/Futura-LSF-Omnom-LE-Regular.otf</item>
        <item name="android:background">#77ff0000</item>
    </style>

    <style name="TextAppearance" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="TextAppearance.Small" parent="android:TextAppearance.Small">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="TextAppearance.Medium" parent="android:TextAppearance.Medium">
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="TextAppearance.Large" parent="android:TextAppearance.Large">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="TextAppearance.Inverse" parent="android:TextAppearance.Inverse">
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="TextAppearance.Small.Inverse" parent="android:TextAppearance.Small.Inverse">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="TextAppearance.Medium.Inverse" parent="android:TextAppearance.Medium.Inverse">
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="TextAppearance.Large.Inverse" parent="android:TextAppearance.Large.Inverse">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="ButtonBarButton" />

    <style name="EditText" parent="android:Widget.Holo.Light.EditText">
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:textCursorDrawable">@drawable/cursor_blue</item>
        <item name="android:cursorVisible">true</item>
    </style>

    <style name="EditText.Small">
        <item name="android:background">@drawable/edit_text_small</item>
    </style>

    <style name="EditText.White">
        <item name="android:background">@drawable/edit_text_white</item>
    </style>

    <style name="EditText.Login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextView" parent="android:Widget.Holo.Light.TextView" />

    <style name="TextView.User">
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextView.User.Data">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <!--<item name="fontPath">fonts/Futura-LSF-Omnom-LE-Regular.otf</item>-->
    </style>

    <style name="TextView.User.Data.Hint">
        <item name="android:paddingTop">0dp</item>
        <item name="android:textColor">@color/profile_hint</item>
        <item name="android:textAppearance">?android:textAppearance</item>
    </style>

    <style name="TextView.User.Hint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/profile_hint</item>
    </style>

    <style name="Button.UserProfile" parent="Button.Selectable" />

    <style name="Button.UserProfile.Data">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:listPreferredItemHeight</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin_medium</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin_medium</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="Button.UserProfile.Data.Expandable">
        <item name="android:drawableRight">@drawable/ic_arrow_right_icon</item>
    </style>

    <style name="TextView.Restaurant">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextView.Restaurant.Data">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TextView.Restaurant.Data.Location">
        <!--<item name="android:drawableLeft">@android:drawable/ic_menu_mylocation</item>
        <item name="android:drawablePadding">@dimen/activity_horizontal_margin_small</item>-->
    </style>

    <style name="TextView.Restaurant.Title">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TextView.Error">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/error_red</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="ImageView" />

    <style name="ImageView.Place" />

    <style name="ImageView.Place.ListLogo">
        <item name="android:layout_width">?android:attr/listPreferredItemHeightLarge</item>
        <item name="android:layout_height">?android:attr/listPreferredItemHeightLarge</item>
    </style>

    <style name="Button" parent="android:Widget.Holo.Light.Button">
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">4dip</item>
        <item name="android:paddingRight">4dip</item>
    </style>

    <style name="Button.Selectable">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="ImageView.Clickable.Cropped" parent="Button">
        <item name="android:layout_width">@dimen/image_button_size</item>
        <item name="android:layout_height">@dimen/image_button_size</item>
        <item name="android:padding">@dimen/activity_vertical_margin_small</item>
        <item name="android:cropToPadding">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Button.Demo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/show_demo_mode</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:drawableLeft">@drawable/ic_demo</item>
        <item name="android:drawablePadding">@dimen/drawable_padding_default</item>
    </style>

    <style name="Button.Demo.White">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:drawableLeft">@drawable/ic_demo_white</item>
    </style>

    <style name="Button.Bottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="Button.Rounded" />

    <style name="Button.Rounded.Blue">
        <item name="android:layout_width">@dimen/btn_rounded_width</item>
        <item name="android:layout_height">@dimen/btn_rounded_height</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:background">@drawable/btn_login</item>
    </style>

    <style name="MenuButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:textAppearance">?android:textAppearance</item>
        <item name="fontPath">fonts/Futura-LSF-Omnom-LE-Regular.otf</item>
    </style>

    <style name="MenuButton.White">
        <item name="android:textColor">@drawable/text_color_selector_menu_blue</item>
        <item name="android:background">@drawable/btn_rounded_bordered_grey</item>
    </style>

    <style name="MenuButton.Blue">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/btn_rounded_blue</item>
    </style>

    <style name="ConfirmCode">
        <item name="android:minWidth">24dp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin_small</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin_small</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">1</item>
        <item name="android:inputType">number</item>
        <item name="android:imeOptions">actionNone</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView.Restaurant.Landing">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:singleLine">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/text_blue</item>
    </style>

    <style name="TextView.MenuItem" />

    <style name="TextView.MenuItem.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin_medium</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin_medium</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

</resources>
