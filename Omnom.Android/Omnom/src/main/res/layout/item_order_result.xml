<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:omnom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
        android:id="@+id/divider"
        layout="@layout/delimiter_vertical_light"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="@dimen/activity_vertical_margin_small"
        android:singleLine="false"
        android:text="TITLE TITLE TITLE TITLE TITLE TITLE TITLE TITLE TITLE TITLE TITLE TITLE TITLE "
        android:textAppearance="?android:textAppearanceLarge"
        omnom:fontPath="fonts/Futura-LSF-Omnom-LE-Regular.otf" />

    <TextView
        android:id="@+id/txt_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingBottom="@dimen/activity_vertical_margin_small"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:singleLine="true"
        android:text="INFO"
        android:textAppearance="?android:textAppearance"
        android:textColor="@color/menu_item_details"
        omnom:fontPath="fonts/Futura-LSF-Omnom-LE-Regular.otf" />

</LinearLayout>