<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:omnom="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="На сколько гостей делить?"
            android:textSize="28sp"
            android:textAppearance="?android:textAppearance"
            omnom:fontPath="fonts/Futura-LSF-Omnom-LE-Regular.otf"/>

        <TextView
            android:id="@+id/txt_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="1"
            android:textSize="@dimen/font_xxlarge"
            android:textAppearance="?android:textAppearance"
            omnom:fontPath="fonts/Futura-LSF-Omnom-LE-Regular.otf"/>

        <com.omnom.android.utils.view.NumberPicker
            android:id="@+id/picker"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/NPWidget.Holo.Light.NumberPicker.Grey"/>
    </LinearLayout>

</FrameLayout>