<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:omnom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:paddingTop="@dimen/activity_vertical_margin_small"
        android:paddingLeft="@dimen/activity_horizontal_margin_medium"
        android:paddingRight="@dimen/activity_horizontal_margin_medium"
        android:layout_height="?android:listPreferredItemHeight">

        <TextView
            android:id="@+id/txt_overall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:singleLine="true"
            android:ellipsize="end"
            omnom:fontPath="fonts/Futura-LSF-Omnom-LE-Regular.otf"
            android:textAppearance="?android:textAppearance"/>

        <TextView
            android:id="@+id/txt_to_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingTop="@dimen/activity_horizontal_margin_small"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="?android:textColorHint"
            omnom:fontPath="fonts/Futura-LSF-Omnom-LE-Regular.otf"
            android:textAppearance="?android:textAppearance"/>

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/bg_bill_footer"
        android:layout_width="match_parent"
        android:layout_marginTop="-1dp"
        android:layout_height="6dp"/>
</LinearLayout>