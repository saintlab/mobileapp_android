<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       xmlns:omnom="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <SurfaceView
                android:id="@+id/preview_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <FrameLayout
                android:id="@+id/background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_wood"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:paddingTop="@dimen/activity_horizontal_margin"
                        android:textColor="@color/cadre_border"
                        android:text="@string/scanning"
                        android:lines="1"
                        android:textAppearance="?android:textAppearanceLarge"
                        omnom:fontPath="fonts/Futura-OSF-Omnom-Regular.otf"/>

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:id="@+id/scan_frame_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/btn_flash_light"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin"
                        android:src="@drawable/ic_flashlight_on"
                        android:contentDescription="@null" />

                    <ImageView
                        android:id="@+id/scan_frame"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/scan_frame_red"
                        android:contentDescription="@null" />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/txt_hint"
                    android:layout_width="@dimen/navigate_qr_text_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/cadre_border"
                    android:textColorLink="@color/cadre_border"
                    android:text="@string/navigate_qr_code"
                    android:lines="3"
                    android:drawableTop="@drawable/ic_shortcut_red"
                    android:drawablePadding="@dimen/drawable_padding_default"
                    android:textAppearance="?android:textAppearanceLarge"
                    omnom:fontPath="fonts/Futura-OSF-Omnom-Regular.otf"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <TextView
                android:id="@+id/btn_not_scanning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/not_scanning_padding"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text="@string/not_scanning"
                android:textColor="@color/text_color_black"
                android:textAppearance="?android:textAppearanceLarge"
                android:background="@android:color/white"
                omnom:fontPath="fonts/Futura-OSF-Omnom-Regular.otf"/>

            <LinearLayout
                android:id="@+id/panel_enter_hash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:visibility="gone">

                <ImageButton
                    android:id="@+id/btn_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:background="@drawable/ic_cross_black"
                    android:contentDescription="@null"/>

                <TextView
                    android:id="@+id/txt_enter_hash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lines="2"
                    android:text="@string/enter_hash"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:textColor="@color/qr_hint_color"
                    android:textAppearance="?android:textAppearanceMedium"
                    omnom:fontPath="fonts/Futura-LSF-Omnom-LE-Regular.otf"/>

                <!-- Scroll view is necessary to prevent the rest of controls to
                     move when keyboard is shown. -->
                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/activity_horizontal_margin"
                        android:gravity="center">

                        <LinearLayout
                            android:id="@+id/enter_hash"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/activity_horizontal_margin_small"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:lines="1"
                                android:text="@string/enter_hash_url"
                                android:textColor="@color/enter_hash_color"
                                android:textAppearance="?android:textAppearanceMedium"
                                omnom:fontPath="fonts/Futura-LSF-Omnom-LE-Regular.otf"/>

                            <EditText
                                android:id="@+id/edit_hash"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="@dimen/activity_horizontal_margin_small"
                                android:singleLine="true"
                                android:maxLength="6"
                                android:minEms="2"
                                android:background="@color/transparent"
                                android:inputType="textNoSuggestions"
                                android:imeOptions="actionDone"
                                android:textAppearance="?android:textAppearanceMedium"
                                omnom:fontPath="fonts/Futura-LSF-Omnom-LE-Regular.otf"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/hash_underline"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignLeft="@+id/enter_hash"
                            android:layout_alignRight="@+id/enter_hash"
                            android:background="@drawable/hash_underline"
                            android:layout_below="@+id/enter_hash" />

                    </RelativeLayout>

                </ScrollView>

            </LinearLayout>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"/>

        <com.google.zxing.client.android.ViewfinderView
            android:id="@+id/viewfinder_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

</merge>
