<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/panel_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_size_default"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin_small"
        android:paddingBottom="@dimen/activity_horizontal_margin_small"
        android:background="@color/list_header">

        <Button
            android:id="@+id/proceed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/proceed"
            android:textColor="@android:color/black"
            style="@android:style/Widget.Holo.Button.Borderless"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/create_account"/>

        <com.omnom.android.view.ViewPagerIndicatorCircle
            android:id="@+id/page_indicator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/title"
            app:radius="2dp"
            app:centered="true"
            app:fillColor="@android:color/black"
            app:pageColor="@android:color/darker_gray"/>

    </RelativeLayout>

    <ScrollView
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:layout_below="@id/panel_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.omnom.util.view.ErrorEdit
                android:id="@+id/edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:inputType="text"
                app:hint="@string/name"
                app:showClear="false"
                app:iconClear="@android:drawable/ic_menu_close_clear_cancel"/>

            <com.omnom.util.view.ErrorEdit
                android:id="@+id/edit_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:inputType="email"
                app:hint="@string/email"
                app:showClear="true"
                app:iconClear="@android:drawable/ic_menu_close_clear_cancel"/>

            <com.omnom.util.view.ErrorEdit
                android:id="@+id/edit_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:inputType="phone"
                app:font="regular_le"
                app:hint="@string/phone_number"
                app:showClear="true"
                app:iconClear="@android:drawable/ic_menu_close_clear_cancel"/>

            <com.omnom.util.view.ErrorEditText
                android:id="@+id/edit_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:clickable="true"
                android:hint="@string/birth_date"/>

            <TextView
                android:id="@+id/text_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/activity_vertical_margin_medium"
                android:paddingBottom="@dimen/activity_vertical_margin_medium"
                android:gravity="center_horizontal"
                style="@style/ErrorEdit.Error"/>

            <TextView
                android:id="@+id/text_agreement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/activity_vertical_margin_medium"
                android:paddingBottom="@dimen/activity_vertical_margin_medium"
                android:paddingLeft="@dimen/activity_horizontal_margin_small"
                android:textAppearance="?android:textAppearance"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
