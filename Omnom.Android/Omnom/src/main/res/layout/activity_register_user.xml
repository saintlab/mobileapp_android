<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.omnom.android.view.LoginPanelTop
        android:id="@+id/panel_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_size_default"
        android:background="@color/list_header"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin_small"
        android:paddingBottom="@dimen/activity_horizontal_margin_small"/>

    <ScrollView
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:layout_below="@id/panel_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.omnom.android.utils.view.ErrorEdit
                android:id="@+id/edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:inputType="name"
                app:hint="@string/name"
                app:showClear="false"
                app:iconClear="@android:drawable/ic_menu_close_clear_cancel"/>

            <com.omnom.android.utils.view.ErrorEdit
                android:id="@+id/edit_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:inputType="email"
                app:hint="@string/email"
                app:showClear="true"
                app:iconClear="@android:drawable/ic_menu_close_clear_cancel"/>

            <com.omnom.android.utils.view.ErrorEdit
                android:id="@+id/edit_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:inputType="phone"
                app:font="regular_le"
                app:hint="@string/phone_number"
                app:showClear="true"
                app:iconClear="@android:drawable/ic_menu_close_clear_cancel"/>

            <com.omnom.android.utils.view.ErrorEditText
                android:id="@+id/edit_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:clickable="true"
                android:hint="@string/birth_date"/>

            <TextView
                android:id="@+id/text_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/activity_vertical_margin_medium"
                android:paddingBottom="@dimen/activity_vertical_margin_medium"
                android:gravity="center_horizontal"
                style="@style/ErrorEdit.Error"/>

            <TextView
                android:id="@+id/text_agreement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/activity_vertical_margin_medium"
                android:paddingBottom="@dimen/activity_vertical_margin_medium"
                android:paddingLeft="@dimen/activity_horizontal_margin_small"
                android:textAppearance="?android:textAppearance"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
