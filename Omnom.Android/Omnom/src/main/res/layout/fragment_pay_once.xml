<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:omnom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_horizontal_margin">

    <ImageButton
        android:id="@+id/btn_close"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        style="@style/Button.Fragment.Bottom.Close" />

    <Button
        android:id="@+id/btn_pay"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/pay_button_height"
        android:minWidth="@dimen/pay_button_minimum_width"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="@drawable/btn_pay"
        android:textColor="@drawable/text_color_selector_white"
        android:textSize="@dimen/font_medium"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textAppearance="?android:textAppearanceMedium"
        omnom:fontPath="fonts/Futura-LSF-Omnom-LE-Regular.otf" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_above="@id/btn_pay"
        android:layout_below="@id/btn_close">

        <TextView
            android:id="@+id/txt_sms_notifications_off"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/sms_notifications_off"
            android:textSize="@dimen/pay_once_font_size"
            android:gravity="center"
            android:textColor="@color/profile_hint" />

        <TextView
            android:id="@+id/txt_pay_once"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/pay_once"
            android:textSize="@dimen/pay_once_font_size"
            android:gravity="center"
            android:textColor="@color/profile_hint" />

    </LinearLayout>

</RelativeLayout>