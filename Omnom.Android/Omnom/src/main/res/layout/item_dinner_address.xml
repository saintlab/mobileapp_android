<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:omnom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/indicator"
        android:singleLine="true"
        android:ellipsize="end"
        omnom:fontPath="fonts/Futura-LSF-Omnom-LE-Regular.otf"
        android:text="TITLE TITLE TITLE TITLE TITLE TITLE TITLE TITLE TITLE TITLE TITLE TITLE TITLE "
        android:textAppearance="?android:textAppearanceLarge" />

    <TextView
        android:id="@+id/txt_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_title"
        android:layout_toLeftOf="@+id/indicator"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/profile_hint"
        omnom:fontPath="fonts/Futura-LSF-Omnom-LE-Regular.otf"
        android:text="TITLE TITLE TITLE TITLE TITLE TITLE TITLE TITLE TITLE TITLE TITLE TITLE TITLE "
        android:textAppearance="?android:textAppearanceLarge" />

    <ImageView
        android:id="@+id/indicator"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_action_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <include
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/txt_info"
        android:layout_marginTop="8dp"
        layout="@layout/delimiter_horizontal" />

</RelativeLayout>