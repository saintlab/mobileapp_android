<FrameLayout android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:omnom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#77000000"
    tools:context="com.omnom.android.fragment.delivery.DeliveryDetailsFragment">

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_horizontal_margin">

        <ImageButton
            android:id="@+id/btn_close"
            style="@style/Button.Fragment.Bottom.Close" />

        <TextView
            android:id="@+id/txt_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/barmen_tips_positive"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black"
            omnom:fontPath="fonts/Futura-LSF-Omnom-LE-Regular.otf" />

        <com.omnom.android.utils.view.NumberPicker
            android:id="@+id/picker"
            style="@style/NPWidget.Holo.Light.NumberPicker.Grey"
            android:layout_width="match_parent"
            android:layout_height="@dimen/takeaway_picker_height" />

        <Button
            android:id="@+id/btn_ok"
            style="@style/Button.Pay.Green"
            android:layout_gravity="center_horizontal"
            omnom:fontPath="fonts/Futura-LSF-Omnom-LE-Regular.otf" />

    </LinearLayout>

</FrameLayout>