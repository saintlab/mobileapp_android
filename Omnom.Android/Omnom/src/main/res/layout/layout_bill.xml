<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:omnom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_size_default"
    android:background="@color/panel_background_grey_light">

    <Button
        android:id="@+id/btn_order"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/pay_button_height"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_centerInParent="true"
        android:paddingLeft="@dimen/activity_horizontal_margin_large"
        android:paddingRight="@dimen/activity_horizontal_margin_large"
        android:text="@string/your_order"
        android:visibility="gone"
        android:textColor="@color/profile_hint"
        android:textAppearance="?android:textAppearance"
        android:background="@drawable/btn_rounded_bordered_grey"
        omnom:fontPath="fonts/Futura-LSF-Omnom-LE-Regular.otf" />

    <LinearLayout
        android:id="@+id/btn_bill"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_size_default"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:text="@string/bill"
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_bill_black"
            android:drawablePadding="@dimen/drawable_padding_default"
            android:textColor="@drawable/text_color_selector"
            android:textAppearance="?android:textAppearanceMedium"
            android:ellipsize="end" />
    </LinearLayout>

</RelativeLayout>