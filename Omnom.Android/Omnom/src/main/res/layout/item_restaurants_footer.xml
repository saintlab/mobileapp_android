<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Не нашли любимое заведение?"
        android:textAppearance="?android:textAppearanceLarge"/>

    <TextView
        android:id="@+id/txt_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Напишите нам"
        android:textColor="@color/bright_blue"
        android:textAppearance="?android:textAppearanceLarge"
        android:drawableBottom="@drawable/ic_mail_flying"
        android:drawablePadding="@dimen/activity_vertical_margin_small"
        android:paddingBottom="@dimen/activity_vertical_margin_large"/>

</LinearLayout>