<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.omnom.android">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.flash"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH_PRIVILEGED" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name="com.omnom.android.OmnomApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_app"
        android:label="@string/app_name"
        android:theme="@style/Theme.Wood.Red">

        <service
            android:name=".service.bluetooth.BackgroundBleService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name="com.omnom.android.activity.SplashActivity"
            android:icon="@drawable/ic_app"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Wood.Red"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.omnom.android.activity.UserRegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.omnom.android.activity.EnteringActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Transparent"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.omnom.android.activity.ConfirmPhoneActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ConfirmPhone"
            android:windowSoftInputMode="stateAlwaysVisible" />
        <activity
            android:name="com.omnom.android.activity.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.omnom.android.activity.ValidateActivityBle"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Wood"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.omnom.android.activity.ValidateActivityCamera"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Wood"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.omnom.android.activity.OrdersActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Wood.Light"
            android:windowSoftInputMode="adjustResize|stateHidden"></activity>
        <activity
            android:name="io.card.payment.CardIOActivity"
            android:configChanges="keyboardHidden|orientation" />
        <activity android:name="io.card.payment.DataEntryActivity" />
        <activity
            android:name="com.omnom.android.activity.CardsActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />
        <activity
            android:name="com.omnom.android.activity.UserProfileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.omnom.android.activity.CardAddActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White.Light"></activity>
        <activity
            android:name="com.omnom.android.activity.CardConfirmActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="stateHidden"></activity>

        <activity
            android:name="com.omnom.android.activity.PaymentProcessActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="stateHidden"/>

        <activity
            android:name="com.omnom.android.activity.ThanksActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Wood.Red"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name="com.omnom.android.activity.OmnomQRCaptureActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Wood"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <meta-data
            android:name="com.crashlytics.ApiKey"
            android:value="80e157ab6e31985057b3080949fbc7c82e4501a4" />
    </application>

</manifest>
