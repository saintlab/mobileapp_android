<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.omnom.android.linker">

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="20"/>

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true"/>
    <uses-feature
        android:name="android.hardware.bluetooth"
        android:required="true"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.BLUETOOTH_PRIVILEGED"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>

    <application
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_splash"
            android:theme="@style/Theme.Splash">
        </activity>
        <activity
            android:name=".activity.ValidationActivity"
            android:label="@string/title_activity_validation"
            android:theme="@style/Theme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.Splash">
        </activity>
        <activity
            android:name=".activity.SimpleSplashActivity"
            android:label="@string/title_activity_simple_splash"
            android:theme="@style/Theme.Splash">

            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>
        <activity
            android:name=".activity.PlacesListActivity"
            android:label="@string/title_activity_places_list"
            android:theme="@style/Theme.Splash">
        </activity>
        <activity
            android:name=".activity.PlaceActivity"
            android:label="@string/title_activity_place"
            android:theme="@style/Theme.Splash">
        </activity>

        <service
            android:name=".service.BluetoothLeService"
            android:enabled="true"
            android:exported="false"/>
    </application>

</manifest>