<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar">
    </style>

    <style name="Theme.Wood" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_wood</item>
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="android:editTextStyle">@style/EditText</item>
        <item name="android:autoCompleteTextViewStyle">@style/EditText</item>
        <item name="android:ratingBarStyle">@style/RatingBar</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.Holo">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="RatingBar" parent="android:Widget.Holo.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/ratingbar_small</item>
        <item name="android:indeterminateDrawable">@drawable/ratingbar_small</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton"/>

    <style name="EditText" parent="android:Widget.Holo.Light.EditText">
        <item name="android:background">@drawable/edit_text</item>
    </style>

    <style name="EditText.Login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextView" parent="android:Widget.Holo.Light.TextView"/>

    <style name="TextView.Place"/>

    <style name="TextView.Place.Data">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TextView.Place.Data.Location">
        <!--<item name="android:drawableLeft">@android:drawable/ic_menu_mylocation</item>
        <item name="android:drawablePadding">@dimen/activity_horizontal_margin_small</item>-->
    </style>

    <style name="TextView.Place.Title">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TextView.Error">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/error_red</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="ImageView"/>

    <style name="ImageView.Place"/>

    <style name="ImageView.Place.ListLogo">
        <item name="android:layout_width">?android:attr/listPreferredItemHeightLarge</item>
        <item name="android:layout_height">?android:attr/listPreferredItemHeightLarge</item>
    </style>

    <style name="Button" parent="android:Widget.Holo.Light.Button"/>

    <style name="Button.Bottom" parent="android:Widget.Holo.Light.Button.Borderless.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="Button.Rounded"/>

    <style name="Button.Rounded.Blue">
        <item name="android:layout_width">@dimen/btn_rounded_width</item>
        <item name="android:layout_height">@dimen/btn_rounded_height</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:background">@drawable/btn_login</item>
    </style>

</resources>
