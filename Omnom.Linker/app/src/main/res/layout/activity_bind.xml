<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.omnom.android.linker.widget.loader.LoaderView
        android:id="@+id/loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <include layout="@layout/view_btn_back"/>

    <RelativeLayout
        android:layout_gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/panel_bottom"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="24dp"
            android:gravity="center"
            android:textColor="@android:color/secondary_text_light"
            android:textStyle="bold"
            android:textIsSelectable="true"
            android:textAppearance="?android:textAppearanceLarge"/>

        <LinearLayout
            android:id="@+id/panel_bottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:visibility="gone">

            <include layout="@layout/delimiter_vertical"/>

            <Button
                android:id="@+id/btn_bottom"
                android:text="@string/remind_password"
                style="@style/Button.Bottom"/>
        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_bind_table"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="156dp"
        android:text="@string/bind"
        android:visibility="visible"
        style="@style/Button.Rounded.Blue"/>

</FrameLayout>
