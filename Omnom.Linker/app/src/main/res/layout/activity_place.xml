<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.omnom.android.linker.widget.LoaderView
        android:id="@+id/loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="@dimen/btn_back_size"
        android:layout_height="@dimen/btn_back_size"
        android:layout_margin="@dimen/btn_back_margin"
        android:background="@drawable/btn_back"/>

    <Button
        android:id="@+id/btn_bind_table"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/activity_horizontal_margin_large"
        android:text="@string/bind"
        style="@style/Button.Rounded.Blue"/>

</FrameLayout>
