<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/img_loader"
        android:layout_gravity="center"
        android:layout_width="700dp"
        android:layout_height="700dp"
        android:src="@drawable/bg_loader_rounded"/>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="@dimen/loader_progress_size"
        android:layout_height="@dimen/loader_progress_size"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:indeterminate="false"
        android:progress="0"
        android:max="100"
        android:progressDrawable="@drawable/loader_progress"
        style="?android:attr/progressBarStyleHorizontal"/>

    <ImageView
        android:id="@+id/img_logo"
        android:layout_gravity="center"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_launcher"/>
</merge>